@{
    ViewBag.Title = "Oblicz BMI";
}

<div class="row" id="leftcontent1">
    <div class="col-md-3">
        <div class="card1 text-center">
            <div class="card-block">

                <form id="bmiform">
                    <h4>Oblicz idealną wagę</h4>
                    <div class="form-group">
                        <label for="formGroupExampleInput">Podaj wagę</label>
                        <input type="text" class="form-control" id="weight" placeholder="w kilogramach">
                    </div>
                    <div class="form-group">
                        <label for="formGroupExampleInput2">Podaj wzrost</label>
                        <input type="text" class="form-control" id="growth" placeholder="w centymetrach">
                    </div>
                    <a href="" class="btn btn-primary buttonwhite" onfocus="Bmi()" type="submit">Oblicz</a>
                </form>
            </div>
        </div>
    </div>
</div>


<div class="row" id="leftcontent2">
    <div class="col-md-3">

        <table class="table table-hover table-dark">
            <thead>
                <tr>
                    <th scope="col">BMI</th>
                    <th scope="col">Stan</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>< 16,0</td>
                    <td>wygłodzenie</td>
                </tr>
                <tr>
                    <td>16,0–16,99</td>
                    <td>wychudzenie</td>
                </tr>
                <tr>
                    <td>17,0–18,49</td>
                    <td>niedowaga</td>
                </tr>
                <tr>
                    <td>18,5–24,99 </td>
                    <td>waga prawidłowa</td>
                </tr>
                <tr>
                    <td>25,0–29,99</td>
                    <td>nadwaga</td>
                </tr>
                <tr>
                    <td>30,0–34,99</td>
                    <td>otyłość pierwszego stopnia</td>
                </tr>
                <tr>
                    <td>35,0–39,99</td>
                    <td>otyłość drugiego stopnia</td>
                </tr>
                <tr>
                    <td>≥ 40,0</td>
                    <td>
                        otyłość trzeciego stopnia

                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="ModalInfoCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">BMI - Info</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div id="infocontent" class="modal-body">
                <h4 class="text-center">Twój wynik BMI, to: 23,3</h4>
                <h5 class="text-center">Możesz być z siebie zadowolony/zadowolona - wynik jest bardzo dobry</h5>
                <i id="ScoreContent" class="far fa-smile-wink fa-4x"></i>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Zamknij</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">Ok</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="ModalPromo" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">BMI - Promocja</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div id="infocontent" class="modal-body">
                <h4 class="text-center">Zawsze może być lepiej [...]</h4>
                <h5 class="text-center">Możesz skorzystać z świetnej promocji poniżej:</h5>
                <nav>
                    <div class="nav nav-tabs" id="nav-tab" role="tablist">
                        <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-diet" role="tab" aria-controls="nav-diet" aria-selected="true">Dieta</a>
                        <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#nav-sport" role="tab" aria-controls="nav-sport" aria-selected="false">Ćwiczenia</a>
                    </div>
                </nav>
                <div class="tab-content" id="nav-tabContent">
                    <div class="tab-pane fade show active" id="nav-diet" role="tabpanel" aria-labelledby="nav-home-tab">
                        <div class="card" id="cardcenter" style="width: 18rem;">
                            <div class="card-body">
                                <h5 class="card-title">Magiczna dieta</h5>
                                <h6 class="card-subtitle mb-2 text-muted">Prosta, szybka i bezpieczna </h6>
                                <p class="card-text">Zamów dietę już teraz - nie tylko damy Ci przepisy ale również udzielimy wszystkim niezbędnych odpowiedzi na Twoje pytania!</p>
                                <a href="https://mdwojak.pl/" class="card-link">Zamów już teraz</a>

                            </div>
                        </div>

                    </div>
                    <div class="tab-pane fade" id="nav-sport" role="tabpanel" aria-labelledby="nav-profile-tab">
                        <div class="card" id="cardcenter" style="width: 18rem;">
                            <div class="card-body">
                                <h5 class="card-title">Świetne ćwiczenia</h5>
                                <h6 class="card-subtitle mb-2 text-muted">Proste, szybkie i bezpieczne </h6>
                                <p class="card-text">Zamów ćwiczenia już teraz - nie tylko poprawidzmy dla Ciebie spis całego treningu ale również udzielimy wszystkim niezbędnych odpowiedzi na Twoje pytania!</p>
                                <a href="https://mdwojak.pl/" class="card-link">Zamów już teraz</a>

                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Zamknij</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">Ok</button>
            </div>
        </div>
    </div>
</div>
